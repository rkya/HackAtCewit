@{
    ViewData["Title"] = "Add Video";
}
@model Video
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 my-auto">
                <div class="container-fluid text-center">
                    <h3>Add new Video</h3>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 my-auto">
                <div class="container-fluid">
                    @using (Html.BeginForm())
                    {
                        <table id="add">
                            <tbody>
                                <tr>
                                    <td style="width:30%;">@Html.LabelFor(m => m.Title)</td>
                                    <td style="width:70%;">
                                        @Html.TextBoxFor(m => m.Title, new { @class = "text" })
                                        @Html.ValidationMessage("Title", "", new { @class = "text-danger" }, "")
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:30%;">@Html.LabelFor(m => m.Url)</td>
                                    <td style="width:70%;">
                                        @Html.TextBoxFor(m => m.Url, new { placeholder = "e.g. https://www.youtube.com/embed/i9TRte-Nrz0", @class = "text" })
                                    @Html.ValidationMessage("Url", "", new { @class = "text-danger" }, "")
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="margin: auto;"><input class="button" type="submit" value="Add" /></td>
                                </tr>
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@section Styles {
    <link href="@Url.Content("~/css/Video/Add.css")" rel="stylesheet" type="text/css" />
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
