@{
    ViewData["Title"] = "Edit Score";
}
@model LeaderBoard
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 my-auto">
                <div class="container-fluid text-center">
                    <h3>Edit Score</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 my-auto">
                <div class="container-fluid">
                    @using (Html.BeginForm())
                    {
                        <table id="add">
                            <tbody>
                                <tr>
                                    <td style="width:30%;">@Html.LabelFor(m => m.Username)</td>
                                    <td style="width:70%;">
                                        @Html.DisplayTextFor(m => m.Username)
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:30%;">@Html.LabelFor(m => m.Score)</td>
                                    <td style="width:70%;">
                                        @Html.TextAreaFor(m => m.Score, new { @class = "text" })
                                        @Html.ValidationMessage("Score", "", new { @class = "text-danger" }, "")
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="margin: auto;"><input class="button" type="submit" value="Edit" /></td>
                                </tr>
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@section Styles {
    <link href="@Url.Content("~/css/LeaderBoard/Edit.css")" rel="stylesheet" type="text/css" />
}
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
