@{
    ViewData["Title"] = "Faq";
}
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 my-auto">
                <div class="container-fluid">
                    <h1>FAQ</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 my-auto">
                <div class="container-fluid">
                    @model List<Faq>
                    @foreach (var faq in Model)
                    {
                        <div>
                            <div style="float:left; text-align: justify;" class="section-heading">
                                <h3>@faq.Question</h3>
                            </div>
                            <br/>
                            @if (this.User.IsInRole("admin"))
                            {
                                <div>
                                    <input class="button" type="button" value="Edit" onclick="location.href='@Url.Action("Edit", "Faq", new { id=faq.Id })'" />
                                    <input class="button" type="button" value="Delete" onclick="location.href='@Url.Action("Delete", "Faq", new { id=faq.Id })'" />
                                </div>
                            }
                        </div>
                        <br />
                        <br/>
                        <div style="float:left; text-align: justify;">
                            @faq.Answer
                        </div>
                        <br />
                        <br />
                    }
                </div>
                <br/>
                <br/>
            </div>
        </div>
    </div>
</section>
@section Styles {
    <link href="@Url.Content("~/css/Faq/Index.css")" rel="stylesheet" type="text/css" />
}