@{
    ViewData["Title"] = "Faq";
}
<section class="faq" id="faq">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 my-auto">
                <div class="container-fluid">
                    <h1>FAQ</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 my-auto">
                <div class="container-fluid">
                    @model List<Faq>
                    @foreach (var faq in Model)
                    {

                        <div class="section-heading">
                            <h3>@faq.Question</h3>
                        </div>
                        <div>
                            <input type="button" value="Edit" onclick="location.href='@Url.Action("Edit", "Faq", new { id=faq.Id })'" />
                            <input type="button" value="Delete" onclick="location.href='@Url.Action("Delete", "Faq", new { id=faq.Id })'" />
                        </div>
                        <p>
                            @faq.Answer
                        </p>

                    }
                </div>
            </div>
        </div>
    </div>
</section>