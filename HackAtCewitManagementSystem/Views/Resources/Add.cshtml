@{
    ViewData["Title"] = "Add Resource";
}
@model Resource
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 my-auto">
                <div class="container-fluid text-center">
                    <h3>Add new Resource</h3>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 my-auto">
                <div class="container-fluid">
                    @using (Html.BeginForm())
                    {
                        <table id="add">
                            <tbody>
                                <tr>
                                    <td style="width:30%;">@Html.LabelFor(m => m.Title)</td>
                                    <td style="width:70%;">
                                        @Html.TextBoxFor(m => m.Title, new { @class = "text" })
                                        @Html.ValidationMessage("Title", "", new { @class = "text-danger" }, "")
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:30%;">@Html.LabelFor(m => m.Link)</td>
                                    <td style="width:70%;">
                                        @Html.TextBoxFor(m => m.Link, new { @class = "text" })
                                        @Html.ValidationMessage("Link", "", new { @class = "text-danger" }, "")
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:30%;">@Html.LabelFor(m => m.Description)</td>
                                    <td style="width:70%;">
                                        @Html.TextAreaFor(m => m.Description, new { @class = "text" })
                                        @Html.ValidationMessage("Description", "", new { @class = "text-danger" }, "")
                                    </td>
                                </tr>
                                <tr>
                                    <td style="width:30%;">@Html.LabelFor(m => m.ProviderName)</td>
                                    <td style="width:70%;">
                                        @Html.TextBoxFor(m => m.ProviderName, new { @class = "text" })
                                        @Html.ValidationMessage("ProviderName", "", new { @class = "text-danger" }, "")
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="margin: auto;"><input class="button" type="submit" value="Add" /></td>
                                </tr>
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@section Styles {
    <link href="@Url.Content("~/css/Resources/Add.css")" rel="stylesheet" type="text/css" />
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
