@{
    ViewData["Title"] = "Resources";
}
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-12 my-auto">
                <div class="container-fluid">
                    <h1>Resources</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 my-auto">
                <div class="container-fluid">
                    <table>
                        @model List<Resource>
                        @foreach (var resource in Model)
                        {
                            <tr style="vertical-align: middle;">
                                <td class="section-heading" style="float:left; vertical-align: middle;">
                                    <a target="_blank" href="@resource.Link">@resource.Title</a>
                                </td>
                                @if (this.User.IsInRole("admin"))
                                {
                                    <td>
                                        <input class="button" type="button" value="Edit" onclick="location.href='@Url.Action("Edit", "Resources", new { id = resource.Id })'" />
                                        <input class="button" type="button" value="Delete" onclick="location.href='@Url.Action("Delete", "Resources", new { id = resource.Id })'" />
                                    </td>
                                }
                            </tr>
                            <tr>
                                <td colspan="2" style="padding: 0px 0px 40px 0px;">
                                    @resource.Description
                                </td>
                            </tr>
                        }

                    </table>
                    <br/>
                    <br/>
                </div>
            </div>
        </div>
    </div>
</section>
@section Styles {
    <link href="@Url.Content("~/css/Resources/Index.css")" rel="stylesheet" type="text/css" />
}