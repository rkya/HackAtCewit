@{
    ViewData["Title"] = "Resources";
}
<section class="resources" id="resources">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 my-auto">
                <div class="container-fluid">
                    <h1>Resources</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 my-auto">
                <div class="container-fluid">
                    @model List<Resource>
                    @foreach (var resource in Model)
                    {
                        <div class="section-heading">
                            <a target="_blank" href="@resource.Link">@resource.Title</a>
                        </div>
                        @if (this.User.IsInRole("admin"))
                        {
                            <div>
                                <input type="button" value="Edit" onclick="location.href='@Url.Action("Edit", "Resources", new { id = resource.Id })'" />
                                <input type="button" value="Delete" onclick="location.href='@Url.Action("Delete", "Resources", new { id = resource.Id })'" />
                            </div>
                        }
                        <p>
                            @resource.Description
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</section>